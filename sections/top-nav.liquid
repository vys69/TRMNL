{% if section.settings.enableTopBar %}


<style>

.flex-shrink-0{flex-shrink: 0;}

#mobile-nav {
    border-bottom: 1.5px solid #000;
    border-top: 1.5px solid #000;
    background: white;
}

.layout{
  margin-top:95px !important;
}
  

#mobile-nav {
    display: flex;
    list-style: none;
    padding: 0; /* Remove default padding from list */
    margin: 0; /* Remove default margin from list */
}

#message-bar, #mobile-nav {
    height: 39px;
}

.text-uppercase {
    text-transform: uppercase;
}

.m-0 {
    margin: 0;
}

.align-items-center {
    align-items: center;
}

.d-flex {
    display: flex;
}

.overflow-auto {
    overflow: auto;
}

.overflow-hidden {
    overflow: hidden;
}

.list-unstyled {
    padding-left: 0;
    list-style: none;
}

html{
	width: 100%;
	height: 100%;
}

#mobile-nav li a {
    color: #000;
    text-decoration: none;
    font-size: 20px;);
    margin: 5px;
}



.fw-bold {
    font-weight: 700;
}

#nav-container {
    width: 100%;
    overflow-x: auto;
    position: fixed;
    top: 0;
    left: 0px;
    z-index: 9998;
    margin-top: 63px;
}
  
</style>

<div id="nav-container">
  <ul id="mobile-nav" class="
    d-flex
    m-0
    list-unstyled
    align-items-center
    text-uppercase
    overflow-auto
  ">
    {% for link in section.settings.top-bar-menu.links %}
      <li class="flex-shrink-0">
        <a href="{{ link.url }}" class="fw-bold">{{ link.title }}</a>
      </li>
    {% endfor %}
  </ul>
</div>
{% endif %}
{% schema %}
  {
    "name": "Top Bar",
    "settings": [
        {
        "type": "header",
        "content": "Mobile Navigation",
        "info": "Navigation on mobile you see under the mobile header. This was added by me specifically."
      },
      {
        "type": "checkbox",
        "id": "enableTopBar",
        "label": "Enable Top Bar"
      },
       {
      "type": "link_list",
      "id": "top-bar-menu",
      "default": "main-menu",
      "label": "Secondary Nav Selection"
    }
    ],
  "presets": [
    {
      "name": "Top Nav",
      "settings": {
      }
    }
  ]
  }
{% endschema %}